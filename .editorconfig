# EditorConfig for bigint-cpp
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# C++ source and header files
[*.{cpp,hpp,h,c,cc,cxx,hxx}]
indent_size = 2
max_line_length = 100

# CMake files
[{CMakeLists.txt,*.cmake}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefiles require tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 4

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Git configuration
[.git*]
indent_size = 4
